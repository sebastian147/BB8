#include "aplicacion.h"
#include "FW_rgb.h"

void rgb_init (void)
{
	//elijo que funcion van a cumplir los pines 0=gpio
	SetPINSEL(LEDR,0);
	SetPINSEL(LEDV,0);
	SetPINSEL(LEDA,0);

	//elijo salida o entrada 0 salida
	SetDIR(LEDR,1);
	SetDIR(LEDV,1);
	SetDIR(LEDA,1);

}
void rgb (void)
{

	SetPIN(LEDR,0);
	SetPIN(LEDV,0);
	SetPIN(LEDA,0);

}
void Cambido_de_colores(void)
{
	static uint8_t color=0;

	switch(color)
	{
		case 0:
			SetPIN(LEDA,0);

		break;

		case 1:
			SetPIN(LEDV,0);

		break;

		case 2:
			SetPIN(LEDR,0);

		break;
	}
}
